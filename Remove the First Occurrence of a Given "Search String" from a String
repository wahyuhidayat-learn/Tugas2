1.Javascript

function removeFirstOccurrence(str, searchStr) {
    const index = str.indexOf(searchStr);
    if (index === -1) {
        return str;
    }
    return str.slice(0, index) + str.slice(index + searchStr.length);
}

// Example usage:
console.log(removeFirstOccurrence("Hello world", "world")); // Output: "Hello "



2.Typescript

function removeFirstOccurrence(str, searchStr) {
    const index = str.indexOf(searchStr);
    if (index === -1) {
        return str;
    }
    return str.slice(0, index) + str.slice(index + searchStr.length);
}

// Example usage:
console.log(removeFirstOccurrence("Hello world", "world")); // Output: "Hello "
